= form_for @device do |f|
  -if @device.errors.any?
    #error_explanation
      %h2= "#{pluralize(@device.errors.count, "error")} prohibited this device from being saved:"
      %ul
        - @device.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :serial_number
    = f.text_field :serial_number
  .field
    = f.label :model_number
    = f.text_field :model_number
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :tag
    = f.text_field :tag
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :pool_id
    = f.text_field :pool_id
  .actions
    = f.submit 'Save'
